{
    "name": "minimal-express-app",
    "version": "1.0.0",
    "description": "Minimal Express app with scalable structure",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --runInBand",
        "lint": "eslint .",
        "generate:openapi": "node generate_openapi.js"
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.13.3",
        "mongoose": "^8.8.0",
        "morgan": "^1.10.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "eslint": "^9.24.0",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.3",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "mongodb-memory-server": "^10.1.4"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ignore": [
            "node_modules",
            "package.json",
            "package-lock.json",
            "*.lock",
            "*.log",
            "*.md",
            ".git",
            "dist",
            "build"
        ],
        "ext": "js,json"
    }
}
