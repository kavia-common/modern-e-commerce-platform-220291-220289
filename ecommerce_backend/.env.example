# Application
NODE_ENV=development
HOST=0.0.0.0
PORT=3001

# Database
# The MongoDB container exposes db_env_vars: MONGODB_URL, MONGODB_DB
# Map them to the backend variables below or set MONGODB_URI directly.
# Preferred: set MONGODB_URI; fallback mapping logic uses MONGODB_URL if present.
MONGODB_URI=mongodb://appuser:dbuser123@localhost:5001/ecommerce?authSource=admin
MONGODB_DB=ecommerce

# CORS and Cookies
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false

# Auth (replace with strong secrets in production)
JWT_ACCESS_SECRET=changeme_access
JWT_REFRESH_SECRET=changeme_refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Seeds and File storage
SEED_ON_START=false
FILE_STORAGE=local
