# Application
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
# Example includes credentials and authSource=admin; adjust per your environment.
MONGODB_URI=mongodb://appuser:dbuser123@localhost:5000/myapp?authSource=admin
MONGODB_DB=myapp

# JWT
JWT_ACCESS_SECRET=changeme_access
JWT_REFRESH_SECRET=changeme_refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS and cookies
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false

# Seeding and storage
SEED_ON_START=false
FILE_STORAGE=local
