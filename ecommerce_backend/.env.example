# Application
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS
# Frontend dev origin (React app)
CORS_ORIGIN=http://localhost:3000

# MongoDB
# Preferred: set MONGODB_URI directly. If absent, backend auto-resolves by reading
# ../ecommerce_database/db_connection.txt (supports "mongosh <URI>" or raw URI).
# Fallbacks: MONGODB_URL (+ optional MONGODB_DB) else dev default inside code.
MONGODB_URI=
MONGODB_DB=ecommerce

# JWT
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Seeding
# If true, minimal data (categories, one product, admin user, coupon) is seeded at boot
SEED_ON_START=true

# Email / Notifications (placeholders)
EMAIL_FROM=no-reply@example.com
SMTP_URL=

# Payments (placeholders)
# Use either Stripe or Razorpay; when both empty the app uses a mock provider
STRIPE_SECRET_KEY=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
PAYMENT_WEBHOOK_SECRET=

# URL references (used by docs or payment redirect helpers)
FRONTEND_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3001
